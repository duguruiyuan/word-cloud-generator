{

    "manifest_version": 2,
    "name": "Word Cloud Generator",
    "version": "1.0",

    "description": "generate a word cloud for the content in selected sections of the page",
    "icons": {
        "32": "icons/word-cloud-generator-32.png",
        "48": "icons/word-cloud-generator-48.png",
        "64": "icons/word-cloud-generator-64.png",
        "96": "icons/word-cloud-generator-96.png"
    },

    "applications": {
        "gecko": {
            "id": "word@cloud.generator",
            "strict_min_version": "48.0"
        }
    },

    "permissions": [
        "activeTab",
        "storage"
    ],

    "browser_action": {
        "default_icon": "icons/word-cloud-generator-32.png",
        "default_title": "Word Cloud Generator",
        "default_popup": "popup/word-cloud-config.html"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "vendor/d3.min.js",
                "vendor/d3-cloud.min.js",
                "lib/word-cloud-container.js",
                "lib/word-cloud-generator.js"
            ]
        }
    ]
}
